&cpu0 {
	/delete-property/operating-points-v2;
	/delete-property/clock-names;
	/delete-property/clocks;
	enable-method = "psci";
	power-domains = <&cpu0_pd>, <&scmi_perf 0>;
	power-domain-names = "psci", "perf";
};

